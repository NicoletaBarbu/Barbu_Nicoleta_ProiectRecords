@page
@model Barbu_Nicoleta_ProiectRecords.Pages.Records.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Records</h1>

<p>
    <a asp-page="Create">Add new record</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].PublishingYear)
            </th>
            <th>
                Record House
            </th>
            <th>
                Musical Genre
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Record) {
        <tr>
            <td>
                @if (item.ImageUrl != null)
                {
                    <img src="@Url.Content(item.ImageUrl)" alt="Image" width="150" height="150" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishingYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recordhouse.RecordhouseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.GenreName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
